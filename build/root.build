cxx.internal.scope = current

cxx.std = latest

using cxx

hxx{*}: extension = hxx
ixx{*}: extension = ixx
txx{*}: extension = txx
cxx{*}: extension = cxx

# Apache2 configuration files.
#
define conf: file
conf{*}: extension = conf

# The test target for cross-testing (running tests under Wine, etc).
#
test.target = $cxx.target
